import java.io.*;
import java.util.*;

public class S3Compiler {
	public static void main(String[] args) throws IOException {
		System.out.println("S3 compiler written by ...");
		
		if (args.length != 1) {
			System.err.println("Wrong number and line args");
			System.exit(1);
		}
		
		boolean isInDebugMode = false;
		
		String inFileName = args[0] + ".s";
		String outFileName = args[0] + ".a";
		
		Scanner inFile = new Scanner(new File(inFileName));
		PrintWriter outFile = new PrintWriter(outFileName);
		
		outFile.println("; from S3 compiler written by ...");
		
		S3SymTab symTab = new S3SymTab();
		S3TokenMgr tMgr = new S3TokenMgr(inFile, outFile, isInDebugMode);
		S3CodeGeneration codeGen = new S3CodeGeneration(outFile, symTab);
		S3Parser parser = new S3Parser(symTab, tMgr, codeGen);
		
		try {
			parser.parse();
		} catch (RuntimeException e) {
			System.err.println(e.getMessage());
			outFile.println(e.getMessage());
			outFile.close();
			System.exit(1);
		}
		
		outFile.close();
	}
} 

class Token {
	public int type;
	public int beginLine, beginColumn, endLine, endColumn;
	public String image;
	public Token nextToken;
}

interface S3Constants {
	public int EOF = 0;
	public int PRINTLN = 1;
	public int UNSIGNED = 2;
	public int ID = 3;
	public int ASSIGN = 4;
	public int SEMICOLON = 5;
	public int LEFTPAREN = 6;   // (
	public int RIGHTPAREN = 7;  // )
	public int PLUS = 8;
	public int MINUS = 9;
	public int TIMES = 10;
	public int DIVIDE = 11;
	public int ERROR = 12;
	public int PRINT = 13;
	public int LEFTBRACE = 14;	// {
	public int RIGHTBRACE = 15; // }
	public int STRING = 16;
	public int READINT = 17;
	
	String[] tokenImage = {
							"<EOF>",
							"PRINTLN",
							"<UNSIGNED>",
							"ID",
							"ASSIGN",
							"SEMICOLON",
							"LEFTPAREN",
							"RIGHTPAREN",
							"\"+\"",
							"\"-\"",
							"\"*\"",
							"DIVIDE",
							"ERROR",
							"PRINT",
							"LEFTBRACE",
							"RIGHTBRACE",
							"STRING",
							"READINT"
							};
}

class S3SymTab {
	private ArrayList<String> symbolTable;
	
	public S3SymTab() {
		this.symbolTable = new ArrayList<String>();
	}
	
	public void enter(String symbol) {
		if (symbolTable.indexOf(symbol) < 0) {
			symbolTable.add(symbol);	
		}
	}
	
	public String getSymbol(int index) {
		return symbolTable.get(index);
	}
	
	public int getSize() {
		return symbolTable.size();
	}
}

class S3TokenMgr implements S3Constants {
	private Scanner inFile;
	private PrintWriter outFile;
	private boolean isInDebugMode;
	private char currentChar;
	private char previousChar;
	private int currentColumnNumber;
	private int currentLineNumber;
	private String inputLine;
	private Token token;
	private StringBuffer buffer;
	
	public S3TokenMgr(Scanner inFile, PrintWriter outFile, boolean isInDebugMode) {
		this.inFile = inFile;
		this.outFile = outFile;
		this.isInDebugMode = isInDebugMode;
		currentChar = '\n';
		previousChar = '\0';
		currentColumnNumber = 0;
		currentLineNumber = 0;
		buffer = new StringBuffer();
	}
	
	private void getNextChar() {
		if (currentChar == EOF) {
			return;
		}
		if (currentChar == '\n') {
			if (inFile.hasNextLine()) {
				inputLine = inFile.nextLine();
				// 添加源代码作为注释
				outFile.println(";" + inputLine);
				inputLine += "\n";
				currentColumnNumber = 0;
				currentLineNumber++;
			} else {
				currentChar = EOF;
				
				return ;
			}
		}
		if (currentColumnNumber > 1) {
			previousChar = inputLine.charAt(currentColumnNumber - 2);
		}

		currentChar = inputLine.charAt(currentColumnNumber++);
		
		if (currentChar == '/' && inputLine.charAt(currentColumnNumber) == '/') {
			if (inputLine.charAt(currentColumnNumber - 2) == '"') {
				return ;
			}
			currentChar = '\n';
		}
	}
	
	public Token getNextToken() {
		while (Character.isWhitespace(currentChar)) {
			getNextChar();
		}
		
		token = new Token();
		token.nextToken = null;
		
		token.beginColumn = currentColumnNumber;
		token.beginLine = currentLineNumber;
		
		if (currentChar == EOF) {
			token.type = EOF;
			token.image = tokenImage[token.type];
			token.endColumn = currentColumnNumber;
			token.endLine = currentLineNumber;
		} else if (Character.isDigit(currentChar)) {
			buffer.setLength(0);
			do {
				buffer.append(currentChar);
				token.endColumn = currentColumnNumber;
				token.endLine = currentLineNumber;
				getNextChar();
			} while (Character.isDigit(currentChar));
			
			token.type = UNSIGNED;
			token.image = buffer.toString();
		} else if (Character.isLetter(currentChar)) {
			buffer.setLength(0);
			do {
				buffer.append(currentChar);
				token.endColumn = currentColumnNumber;
				token.endLine = currentLineNumber;
				getNextChar();
			} while (Character.isLetterOrDigit(currentChar));
			
			token.image = buffer.toString();
			
			if (token.image.equals("println")) {
				token.type = PRINTLN;
			} else if (token.image.equals("print")) {
				token.type = PRINT;
			} else if (token.image.equals("readint")) {
				token.type = READINT;
			} else {
				token.type = ID;
			}
		} else if (currentChar == '"') {
			buffer.setLength(0);
			do {
				if (currentChar == '\n' || currentChar == '\r') {
					token.type = ERROR;
					token.image = Character.toString(currentChar);
					break;
				}
				buffer.append(currentChar);
				token.endColumn = currentColumnNumber;
				token.endLine = currentLineNumber;
				getNextChar();
			} while (currentChar != '"');
			// 将结束的"加入到buffer中
			buffer.append(currentChar);
			token.image = buffer.toString();
			token.type = STRING;
			getNextChar();
//			if (currentChar == '\n') {
//				getNextChar();
//			}
		} else {
			switch (currentChar) {
			case '=': 
				token.type = ASSIGN;
				break;
			case ';': 
				token.type = SEMICOLON;
				break;
			case '(': 
				token.type = LEFTPAREN;
				break;
			case ')':
				token.type = RIGHTPAREN;
				break;
			case '+':
				token.type = PLUS;
				break;
			case '-':
				token.type = MINUS;
				break;
			case '*':
				token.type = TIMES;
				break;
			case '/':
				token.type = DIVIDE;
				break;
			case '{':
				token.type = LEFTBRACE;
				break;
			case '}':
				token.type = RIGHTBRACE;
				break;
			
			default:
				token.type = ERROR;
				break;
			}
			token.image = Character.toString(currentChar);
			token.endColumn = currentColumnNumber;
			token.endLine = currentLineNumber;
			
			getNextChar();
		}
		if (isInDebugMode) {
			System.out.printf("type=%s, beginLine=%3d, beginColumn=%3d, endLine=%3d, endColumn=%3d, image:%s\n",
					tokenImage[token.type], token.beginLine, token.beginColumn, token.endLine, token.endColumn, token.image);	
		}
		
		return token;
	}
}

class S3Parser implements S3Constants {
	private S3TokenMgr tMgr;
	private S3SymTab symbolTable;
	private S3CodeGeneration codeGen;
	private Token currentToken;
	private Token previousToken;
	
	public S3Parser(S3SymTab symTab, S3TokenMgr tMgr, S3CodeGeneration codeGen) {
		this.tMgr = tMgr;
		this.symbolTable = symTab;
		this.codeGen = codeGen;
		currentToken = this.tMgr.getNextToken();
		previousToken = null;
	}
	
	private void advance() {
		previousToken = currentToken;
		if (currentToken.nextToken != null) {
			currentToken = currentToken.nextToken;
		} else {
			// 类比链表在链表尾追加一个节点
			currentToken.nextToken = tMgr.getNextToken();
			currentToken = currentToken.nextToken;
		}
	}
	
	private void consume(int expected) {
		if (currentToken.type == expected) {
			advance();
		} else {
			throw genEx("Expecting " + tokenImage[expected]);
		}
	}
	
	private Token getToken(int i) {
		if (i <= 0) {
			return previousToken;
		}
		
		Token token = currentToken;
		
		for (int j = 1; j < i; j++) {
			if (token.nextToken != null) {
				token = token.nextToken;
			} else {
				token.nextToken = tMgr.getNextToken();
				token = token.nextToken;
			}
		}
		
		return token;
	}
	
	private RuntimeException genEx(String errorMessage) {
		return new RuntimeException("Encountered \"" +
									currentToken.image +
									"\" on line " + currentToken.beginLine +
									"\" on column " + currentToken.beginColumn +
									System.getProperty("line.separator") +
									errorMessage);
	}
	
	public void parse() {
		program();
	}
	
	private void program() {
		statementList();
		
		codeGen.endCode();
		
		if (currentToken.type != EOF) {
			genEx("parse run, expecting <EOF>");
		}
	}
	
	private void statementList() {
		switch (currentToken.type) {
		case ID:
		case PRINTLN:
		case PRINT:
		case LEFTBRACE:
		case SEMICOLON:
		case READINT:
			statement();
			statementList();
			break;
		case EOF:
		case RIGHTBRACE:
			;
			break;
		default:
			throw genEx("parse run, expecting statement or <EOF>");
		}
	}
	
	private void statement() {
		switch (currentToken.type) {
		case ID:
			assignStatement();
			break;
		case PRINTLN:
			printlnStatement();
			break;
		case PRINT:
			printStatement();
			break;
		case SEMICOLON:
			nullStatement();
			break;
		case LEFTBRACE:
			compoundStatement();
			break;
		case READINT:
			readintStatement();
			break;
		default:
			throw genEx("Expecting statement");
		}
	}
	
	private void assignmentTail() {
        if (getToken(1).type == ID && getToken(2).type == ASSIGN) {
            Token token = currentToken;
            consume(ID);
            symbolTable.enter(token.image);
            codeGen.emitInstruction("pc", token.image);
            consume(ASSIGN);
            assignmentTail();
            codeGen.emitInstruction("dupe");
            codeGen.emitInstruction("rot");
            codeGen.emitInstruction("stav");
        } else {
            expr();
            consume(SEMICOLON);
        }
	}
	
	private void assignStatement() {
		Token token = currentToken;
		consume(ID);
		symbolTable.enter(token.image);
		codeGen.emitInstruction("pc", token.image);
		consume(ASSIGN);
		assignmentTail();
		codeGen.emitInstruction("stav");
	}
	
	private void printlnStatement() {
		consume(PRINTLN);
		consume(LEFTPAREN);
		if (currentToken.type != RIGHTPAREN) {
			printArgStatement();
		}
		codeGen.emitInstruction("dout");
		codeGen.emitInstruction("pc", "'\\n'");
		codeGen.emitInstruction("aout");
		consume(RIGHTPAREN);
		consume(SEMICOLON);
	}
	
	private void printStatement() {
		consume(PRINT);
		consume(LEFTPAREN);
		printArgStatement();
		codeGen.emitInstruction("dout");
		consume(RIGHTPAREN);
		consume(SEMICOLON);
	}
	
	private void printArgStatement() {
		if (currentToken.type == STRING) {
			Token token = currentToken;
			consume(STRING);
			String label = codeGen.getLabel();
			codeGen.emitInstruction("pc", label);
			codeGen.emitInstruction("sout");
			codeGen.emitdw("^" + label, token.image);
		} else {
			expr();
		}
	}
	
	private void readintStatement() {
		consume(READINT);
		consume(LEFTPAREN);
		consume(ID);
		consume(RIGHTPAREN);
		consume(SEMICOLON);
	}
	
	private void nullStatement() {
		consume(SEMICOLON);
	}
	
	private void compoundStatement() {
		codeGen.emitInstruction("pc", "{");
		consume(LEFTBRACE);
		statementList();
		codeGen.emitInstruction("pc", "}");
		consume(RIGHTBRACE);
	}
	
	private void expr() {
		term();
		termList();
	}
	
	private void term() {
		factor();
		factorList();
	}
	
	private void termList() {
		switch (currentToken.type) {
		case PLUS:
			consume(PLUS);
			term();
			codeGen.emitInstruction("add");
			termList();
			break;
			
		case MINUS:
			consume(MINUS);
			term();
			codeGen.emitInstruction("sub");
			termList();
			break;
			
		case RIGHTPAREN:
		case SEMICOLON:
			break;
			
		default:
			genEx("Expecting \"+\", \")\", or \";\"");
		}
	}
	
	private void factor() {
		Token token;
		switch (currentToken.type) {
		case UNSIGNED:
			token = currentToken;
			consume(UNSIGNED);
			codeGen.emitInstruction("pwc", token.image);
			break;
			
		case ID:
			token = currentToken;
			consume(ID);
			symbolTable.enter(token.image);
			codeGen.emitInstruction("p", token.image);
			break;
			
		case PLUS:
			consume(PLUS);
			factor();
			break;
			
		case MINUS:
			consume(MINUS);
			token = currentToken;
			switch (currentToken.type) {
			case UNSIGNED:
				consume(UNSIGNED);
				codeGen.emitInstruction("pwc", "-" + token.image);
				break;
			case ID:
				consume(ID);
				symbolTable.enter(token.image);
				codeGen.emitInstruction("p", token.image);
				codeGen.emitInstruction("neg");
				break;
			case LEFTPAREN:
				consume(LEFTPAREN);
				expr();
				consume(RIGHTPAREN);
				codeGen.emitInstruction("neg");
				break;
			case PLUS:
				consume(PLUS);
				factor();
				codeGen.emitInstruction("neg");
				break;
				
			case MINUS:
				consume(MINUS);
				factor();
				break;
			default:
				break;
			}
			break;
			
		case LEFTPAREN:
			consume(LEFTPAREN);
			expr();
			consume(RIGHTPAREN);
			break;
		
		default:
			throw genEx("Expecting operator or " + tokenImage[UNSIGNED]);
		}
	}
	
	private void factorList() {
		switch (currentToken.type) {
		case TIMES:
			consume(TIMES);
			factor();
			codeGen.emitInstruction("mult");
			factorList();
			break;
		
		case DIVIDE:
			consume(DIVIDE);
			factor();
			codeGen.emitInstruction("div");
			factorList();
			break;
			
		case RIGHTPAREN:
		case SEMICOLON:
		case PLUS:
		case MINUS:
			break;
		default:
			throw genEx("Expecting op, \")\", or \";\"");
		}
	}
	
	
}

class S3CodeGeneration {
	private PrintWriter outFile;
	private S3SymTab symbolTable;
	private int labelNumber;
	
	public S3CodeGeneration(PrintWriter outFile, S3SymTab symbolTable) {
		this.outFile = outFile;
		this.symbolTable = symbolTable;
		labelNumber = 0;
	}
	
	public void endCode() {
		outFile.println();
		emitInstruction("halt");
		
		int size = symbolTable.getSize();
		
		for (int i = 0; i < size; i++) {
			emitdw(symbolTable.getSymbol(i), "0");
		}
	}
	
	public void emitInstruction(String operation) {
		outFile.printf("		%-4s%n", operation);
	}
	
	public void emitInstruction(String operation, String operand) {
		outFile.printf("		%-4s		%s%n", operation, operand);
	}
	
	public void emitdw(String lable, String value) {
		outFile.printf("		%-9s dw		%s%n", lable + ":", value );
	}
	
	public String getLabel() {
		return "@L" + labelNumber++;
	}
}





























